<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/fl_shadow_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_overlay"

        >

        <TextView
            android:id="@+id/tv_title_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="6dp"
            android:text="ajsdad"
            android:textColor="@android:color/white"
            android:textSize="@dimen/big_body" />

        <TextView
            android:id="@+id/tv_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingHorizontal="6dp"
            android:layout_below="@id/tv_title_slide"
            android:text="chapter 162"
            android:textSize="@dimen/normal_description"
            android:layout_marginVertical="@dimen/margin_xsmall"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</FrameLayout>